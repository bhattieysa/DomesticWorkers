<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BabbySitting"
    android:background="@drawable/watsapplite">


    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:measureAllChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/linreat"
            android:orientation="horizontal"
            android:background="@color/c2">

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:paddingBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_3sdp"
                android:clipToPadding="false">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fbvtv"
                        android:fontFamily="casual"
                        android:text="Silver Plan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@id/fbvtv"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/hunvdred"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/hundvreddays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 Days"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="casual"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_below="@id/hunvdred"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/vsuplan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:textStyle="bold"
                            android:text="Silver Plan"
                            android:layout_marginLeft="@dimen/_60sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"/>


                        <TextView
                            android:id="@+id/vrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:textStyle="bold"
                            android:text="Rs 2000"
                            android:layout_marginLeft="@dimen/_170sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"/>




                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/card"
                android:layout_marginBottom="@dimen/_8sdp"
                android:paddingBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_3sdp"
                android:clipToPadding="false">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pfbtv"
                        android:fontFamily="casual"
                        android:text="Gold Plan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@id/pfbtv"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/phundred"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/phundreddays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 Days"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_below="@id/phundred"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/psuplan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:textStyle="bold"
                            android:text="Gold Plan"
                            android:layout_marginLeft="@dimen/_60sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"/>


                        <TextView
                            android:id="@+id/prate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:textStyle="bold"
                            android:text="Rs 2500"
                            android:layout_marginLeft="@dimen/_170sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"/>



                    </RelativeLayout>




                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:paddingBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_3sdp"
                android:clipToPadding="false">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fbtv"
                        android:fontFamily="casual"
                        android:text="Super Plan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@id/fbtv"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/hundred"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/hundreddays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Days"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="casual"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_below="@id/hundred"
                            android:layout_margin="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/suplan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:textStyle="bold"
                            android:text="Super Plan"
                            android:layout_marginLeft="@dimen/_60sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"/>


                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:textStyle="bold"
                            android:text="Rs 5000"
                            android:layout_marginLeft="@dimen/_170sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"/>




                    </RelativeLayout>




                </RelativeLayout>
            </androidx.cardview.widget.CardView>









        </LinearLayout>

    </HorizontalScrollView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hsv"
        app:layout_constraintStart_toStartOf="parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/babysittingrecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
         />


    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>