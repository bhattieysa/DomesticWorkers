<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <stroke android:width="1dip" android:color="#8D8BC34A" />
            <gradient android:angle="-90" android:startColor="#8D8BC34A" android:endColor="#8D8BC34A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <stroke android:width="1dip" android:color="#8D8BC34A" />
            <solid android:color="#8D8BC34A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <stroke android:width="2dip" android:color="#000" />
            <gradient android:angle="-90" android:startColor="#8D8BC34A" android:endColor="#9A8BC34A" />
        </shape>
    </item>
</selector>